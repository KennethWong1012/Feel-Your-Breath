<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_blue_background"
    android:orientation="vertical"
    android:padding="24dp"
    tools:context=".QuizActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:background="@color/white_element_bg"
        android:paddingLeft="16dp"
        android:paddingTop="4dp"
        android:paddingRight="16dp"
        android:paddingBottom="4dp"
        android:text="@string/question"
        android:textColor="@color/text_color"
        android:textSize="28sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvQuestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@drawable/white_box_background"
        android:minHeight="100dp"
        android:padding="16dp"
        android:text="Question text will appear here."
        android:textColor="@color/text_color"
        android:textSize="18sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <Button
                android:id="@+id/btnAnswerA"
                style="@style/AnswerButtonStyle"
                tools:text="A: Answer A" />

            <Button
                android:id="@+id/btnAnswerB"
                style="@style/AnswerButtonStyle"
                tools:text="B: Answer B" />

            <Button
                android:id="@+id/btnAnswerC"
                style="@style/AnswerButtonStyle"
                tools:text="C: Answer C" />

            <Button
                android:id="@+id/btnAnswerD"
                style="@style/AnswerButtonStyle"
                tools:text="D: Answer D" />

            <Button
                android:id="@+id/btnAnswerE"
                style="@style/AnswerButtonStyle"
                tools:text="E: Answer E" />

            <Button
                android:id="@+id/btnAnswerF"
                style="@style/AnswerButtonStyle"
                tools:text="F: Answer F" />

            <Button
                android:id="@+id/btnAnswerG"
                style="@style/AnswerButtonStyle"
                android:layout_marginBottom="0dp"
                tools:text="G: Answer G" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>